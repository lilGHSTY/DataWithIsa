# DataWithIsa Environment Configuration Template
# Copy this to .env and fill in your actual values

# Project Configuration
PROJECT_NAME=DataWithIsa
PORT=5689

# Flask Configuration
SECRET_KEY=your-secret-key-here-change-in-production
FLASK_ENV=development
FLASK_DEBUG=1

# Database Configuration
DATABASE_URL=postgresql://dataisa:dataisa123@db:5432/datawithisa

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key_here
FROM_EMAIL=isa@datawithisa.com

# Admin Configuration
ADMIN_EMAIL=isa@datawithisa.com
ADMIN_PASSWORD=change_this_password_immediately

# External APIs (configure when ready)
JINA_API_KEY=your_jina_api_key_here
GOOGLE_ANALYTICS_API_KEY=your_ga_key_here

# Feature Flags
ENABLE_MAGIC_LINKS=true
ENABLE_DASHBOARD_BUILDER=true

# Production Configuration (when deploying)
# DATABASE_URL=postgresql://production_user:password@host:5432/datawithisa
# SECRET_KEY=production-secret-key-32-characters-long
# FLASK_ENV=production
# FLASK_DEBUG=0